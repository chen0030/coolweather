<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/weather">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <Button 
            android:id="@+id/switch_city"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/house_icon_change"/>
        <TextView 
	        android:id="@+id/city_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:textColor="#fff"
	        android:textSize="24sp"/>
        <Button 
            android:id="@+id/refresh_weather"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_refresh"/>
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">
        <TextView 
        android:id="@+id/publishe_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:textSize="18sp"/>
         <LinearLayout 
            android:id="@+id/weather_info_layout"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:orientation="vertical">
	       	<TextView 
	       	    android:id="@+id/temp_real_time"
	       	    android:layout_width="wrap_content"
	       	    android:layout_height="wrap_content"
	       	    android:layout_gravity="center_horizontal"
	       	    android:gravity="center"
	       	    android:textColor="#fff"
	       	    android:textSize="80sp"/>
	       	 <TextView 
	       	     
		        android:id="@+id/weather_desp"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        android:gravity="center"
		        android:textColor="#fff"
		        android:textSize="15sp"/>
	         <TextView 
		        android:id="@+id/current_date"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:textColor="#fff"
		        android:textSize="12sp"/>
         </LinearLayout>
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView 
                    android:id="@+id/current_precipition_img"
                    android:contentDescription="@string/app_name"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/umbrella"/>
                <TextView 
                    android:id="@+id/current_precipition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0%"
                    android:textColor="#fff"
			        android:textSize="20sp"/>
                </LinearLayout>
                <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView 
                    android:id="@+id/current_temp_img"
                    android:contentDescription="@string/app_name"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/mercury"/>
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <TextView 
                    android:id="@+id/temp_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#fff"
			        android:textSize="20sp"/>
                    <TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:gravity="center"
				    android:text="@string/temp_string"
				    android:textColor="#fff"
				    android:textSize="20sp"/>
                     <TextView 
                    android:id="@+id/temp_night"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#fff"
			        android:textSize="20sp"/>
                </LinearLayout>
                </LinearLayout>
                <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView 
                    android:id="@+id/current_wind_img"
                    android:contentDescription="@string/app_name"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/wind"/>
                <TextView 
                    android:id="@+id/current_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0米/秒"
                    android:textColor="#fff"
			        android:textSize="20sp"/>
            	</LinearLayout>
            </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:baselineAligned="false"
           android:orientation="vertical">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:orientation="horizontal"
               android:layout_marginTop="4dp"
               android:paddingTop="10dp"
               android:paddingBottom="10dp"
               android:background="#3fffffff" >
				<TextView 
				    android:id="@+id/week_today"
				    android:layout_width="50dp"
				    android:layout_height="wrap_content"
				    android:layout_alignParentLeft="true"
				    android:layout_alignParentStart="true" 
				    android:gravity="center"
				    android:textSize="20sp"/>
               <TextView 
			        android:id="@+id/weather_desp_today"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_toLeftOf="@+id/temp_day_today"
			        android:layout_toStartOf="@+id/temp_day_today"
			        android:layout_marginRight="35dp"
			        android:layout_marginEnd="35dp" 
			        android:gravity="center"
			        android:textColor="#fff"
			        android:textSize="20sp"/>
		      <TextView 
				    android:id="@+id/temp_day_today"
				    android:layout_width="30dp"
				    android:layout_height="wrap_content"
				    android:layout_toLeftOf="@+id/useless_today"
				    android:layout_toStartOf="@+id/temp_night_today"
				     android:gravity="center"
				    android:textColor="#fff"
				    android:textSize="20sp"/>
		      <TextView
		          	android:id="@+id/useless_today" 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_toLeftOf="@+id/temp_night_today"
				    android:layout_toStartOf="@+id/temp_night_today"
				    android:gravity="center"
				    android:text="@string/temp_string"
				    android:textColor="#fff"
				    android:textSize="20sp"/>
		      <TextView 
				    android:id="@+id/temp_night_today"
				    android:layout_width="30dp"
				    android:layout_height="wrap_content"
				    android:layout_alignParentRight="true"
				    android:layout_alignParentEnd="true" 
				    android:layout_marginRight="30dp"
				    android:layout_marginEnd="30dp"
				     android:gravity="center"
				    android:textColor="#fff"
				    android:textSize="20sp"/>
           </RelativeLayout>
           
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:background="#3fffffff"
               android:orientation="horizontal"
               android:paddingTop="10dp"
               android:paddingBottom="10dp"
               android:layout_marginTop="4dp"
               android:layout_marginBottom="4dp" >
               <TextView 
				    android:id="@+id/week_tomorrow"
				    android:layout_width="50dp"
				    android:layout_height="wrap_content"
				    android:layout_alignParentLeft="true"
				     android:layout_alignParentStart="true" 
				    android:gravity="center"
				    android:textSize="20sp"/>
                <TextView 
			        android:id="@+id/weather_desp_tomorrow"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_toLeftOf="@+id/temp_day_tomorrow"
			        android:layout_toStartOf="@+id/temp_day_tomorrow"
			        android:layout_marginRight="35dp"
			        android:layout_marginEnd="35dp" 
			        android:gravity="center"
			        android:textColor="#fff"
			        android:textSize="20sp"/>
		        <TextView 
			        android:id="@+id/temp_day_tomorrow"
			        android:layout_width="30dp"
				    android:layout_height="wrap_content"
				    android:layout_toLeftOf="@+id/useless_tomorrow"
				    android:layout_toStartOf="@+id/useless_tomorrow"
				     android:gravity="center"
				    android:textColor="#fff"
				    android:textSize="20sp"/>
		        <TextView 
		            android:id="@+id/useless_tomorrow"
			        android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_toLeftOf="@+id/temp_night_tomorrow"
				    android:layout_toStartOf="@+id/temp_night_tomorrow"
				    android:gravity="center"
				    android:text="@string/temp_string"
				    android:textColor="#fff"
				    android:textSize="20sp"/>
		        <TextView 
			        android:id="@+id/temp_night_tomorrow"
			        android:layout_width="30dp"
				    android:layout_height="wrap_content"
				    android:layout_alignParentRight="true"
				    android:layout_alignParentEnd="true" 
				    android:layout_marginRight="30dp"
				    android:layout_marginEnd="30dp"
				    android:gravity="center"
				    android:textColor="#fff"
				    android:textSize="20sp"/>               
           </RelativeLayout>
           
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal" 
               android:gravity="center"
               android:paddingTop="10dp"
               android:paddingBottom="10dp"
               android:background="#3fffffff">
                <TextView 
				    android:id="@+id/week_acquired"
				    android:layout_width="50dp"
				    android:layout_height="wrap_content"
				    android:layout_alignParentLeft="true"
				     android:layout_alignParentStart="true" 
				    android:gravity="center"
				    android:textSize="20sp"/>
               <TextView 
			        android:id="@+id/weather_desp_acquired"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_toLeftOf="@+id/temp_day_acquired"
			        android:layout_toStartOf="@+id/temp_day_acquired"
			        android:layout_marginRight="35dp"
			        android:layout_marginEnd="35dp" 
			        android:gravity="center"
			        android:textColor="#fff"
			        android:textSize="20sp"/>
				 <TextView 
				    android:id="@+id/temp_day_acquired"
				    android:layout_width="30dp"
				    android:layout_height="wrap_content"
				    android:layout_toLeftOf="@+id/useless_acquired"
				    android:layout_toStartOf="@+id/useless_acquired"
				    android:gravity="center"
				    android:textColor="#fff"
				    android:textSize="20sp"/>
		        <TextView 
		            android:id="@+id/useless_acquired"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_toLeftOf="@+id/temp_night_acquired"
				    android:layout_toStartOf="@+id/temp_night_acquired"
				    android:gravity="center"
				    android:text="@string/temp_string"
				    android:textColor="#fff"
				    android:textSize="20sp"/>
		        <TextView 
				    android:id="@+id/temp_night_acquired"
				    android:layout_width="30dp"
				    android:layout_height="wrap_content"
				    android:layout_alignParentRight="true"
				    android:layout_alignParentEnd="true" 
				    android:layout_marginRight="30dp"
				    android:layout_marginEnd="30dp"
				    android:gravity="center"
				    android:textColor="#fff"
				    android:textSize="20sp"/>
           </RelativeLayout>
 
       </LinearLayout>
    </RelativeLayout>
    
    <RelativeLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
       <TextView 
           android:id="@+id/weather_alarm"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:gravity="center"
           android:textColor="#fff"
           android:textSize="20sp"/>
    </RelativeLayout>
    
</LinearLayout>
